@layer base {
    .btn {
        @apply border-accent rounded border-2 text-center px-4 py-2 lg:px-6 lg:py-3 text-lg mt-6;
        box-shadow: 0px 0px 5px var(--accent), inset 0px 0px 5px var(--accent);
        transition: all 0.4s ease;
    }

    .btn:hover {
        box-shadow: 0px 0px 10px var(--accent), inset 0px 0px 10px var(--accent);
    }

    .btns {
        @apply flex gap-4 lg:gap-8;
    }
}